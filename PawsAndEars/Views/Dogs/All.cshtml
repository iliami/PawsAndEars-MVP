@using PawsAndEars.Models;
@model IEnumerable<Dog>

@{
    ViewBag.Title = "All Dogs";
}

<h2>Ваши собаки </h2>
@*<h2>@Html.ActionLink("Посмотреть расписание", "ByDate", "Schedule", null, new { @class = "nav-link nav-link-new" })</h2>*@
<ul class="list-group">
    @{

        foreach (Dog dog in Model)
        {
            <li class="list-group-item">
                    <div class="row">
                        <div class="col-xl-3"><h4>@dog.Name</h4></div>
                        <div class="col-xl-3">@dog.BreedName</div>
                        <div class="col-xl-3">Вес: @dog.Weight | Длина тела: @dog.Length</div>
                        <div class="col-xl-3">
                                @Html.ActionLink("Изменить данные", "Edit", new { id = dog.Id }) |
                                @Html.ActionLink("Удалить", "Delete", new { id = dog.Id })
                        </div>

                    </div>
            </li>
        }
    }
</ul>
<div>
    @Html.ActionLink("Добавить питомца", "Add", "Dogs", new {@class="link-underline link-underline-opacity-0" })
</div>


