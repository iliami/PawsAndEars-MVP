@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <section class="mb-4 btn-banner">
        <div class="container p-4">
            <div class="row align-item">
                <div class="col-xxl-1 col-sm-2">
                    <a href="">
                        <img src="~/Content/images/Logo.png" alt="LOGO">
                    </a>
                </div>
                <div class="col-xxl-2 col-sm-1">
                    @*<a href="" class="nav-link nav-link-new">Лапы и уши</a>*@
                    @Html.ActionLink("Лапы и уши", "Index", "Home", null, new { @class = "nav-link nav-link-new" })
                </div>

                <div class="col-xxl-3 col-sm-3">
                    @Html.ActionLink("Породы собак", "GetAllBreeds", "Dogs", null, new { @class = "nav-link nav-link-new" })
                </div>

                @if (Request.IsAuthenticated)
                {
                    <div class="col-xxl-3 col-sm-3">
                        @Html.ActionLink("Питомцы", "GetAll", "Dogs", null, new { @class = "nav-link nav-link-new" })
                    </div>
                    <div class="col-xxl-3 col-sm-3">
                        @Html.ActionLink("Расписание", "ByDate", "Schedule", null, new { @class = "nav-link nav-link-new" })
                    </div>
                }
                @Html.Partial("_LoginPartial")
            </div>
                </div>
        </section>
        <section>
            <div class="container p-3">
                @RenderBody()
            </div>
        </section>

        <section class="m-2">
            <div class="container text-footer text-center">
                <div class="d-flex p-2 border-top border-bottom justify-content-center">
                    Обращайте внимание на то, какой образ жизни необходим той или иной породе собаки.
                </div>
                <div class="row justify-content-center m-4">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="col-xxl-3 col-sm-3">
                            @Html.ActionLink("Питомцы", "GetAll", "Dogs", null, new { @class = "nav-link nav-link-new" })
                        </div>
                        <div class="col-xxl-3 col-sm-3">
                            @Html.ActionLink("Расписание", "ByDate", "Schedule", null, new { @class = "nav-link nav-link-new" })
                        </div>
                    }
                    else
                    {
                        <div class="col-xxl-3 col-sm-3">
                            @Html.ActionLink("Породы собак", "GetAllBreeds", "Dogs", null, new { @class = "nav-link nav-link-new" })
                        </div>
                        <div class="col-xxl-3 col-sm-3">
                            @Html.ActionLink("Зарегистрироваться", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link nav-link-new" })
                        </div>
                    }
                </div>
            </div>
            <div class="container text-end">
                ©2024 Paws and Ears | All Rights Reserved
            </div>

        </section>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
